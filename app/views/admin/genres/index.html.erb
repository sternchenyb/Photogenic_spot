<div class='container'>
  <div class='row'>
   <div class="col-2"></div>
   <div class='col-8 text-center px-5 px-sm-0 py-5'>
    <h5 class="text-dark bg-light p-3 mb-0 text-center">ジャンル追加</h5>
   <div class='row'>
    <%= form_with model: [:admin,@genre], method: :post do |f| %>
    <%= f.text_field :name, placeholder:"ジャンル名" %>
    <%= f.submit '新規登録', class: 'btn btn-success rounded-pill' %>
    <% end %>
    </div></br>
    <table class='table table-hover table-inverse'>
     <thead class='thead-dark'>
      <tr>
       <th>ジャンル</th>
      </tr>
     </thead>
     <tbody>
      <% @genres.each do |genre| %>
       <tr>
        <td><%= genre.name %></td>
        <td>　　</td>
        <td><%= link_to '編集する', edit_admin_genre_path(genre), class: 'btn btn-success rounded-pill'%></td>
        <td><%= link_to '削除', [:admin,genre], method: :delete, class: "btn btn-sm btn-danger rounded-pill"%></td>
       <% end %>
       </tr>
     </tbody>
    </table>
   </div>
  </div>
 </div>