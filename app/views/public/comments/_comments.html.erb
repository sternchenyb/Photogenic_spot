<% spot.comments.each do |comment| %>
<table class="justify-content-around">
  <tbody>
    <tr>
      <td>
        <%= image_tag comment.user.get_profile_image,size:"100,100", class:"mt-3 rounded-circle"; %><br>
        <%= link_to user_path(comment.user_id), class:"text-dark" do %>
          <span><i class="fas fa-user"></i> By <%= comment.user.name %> </span>
        <% end %>
      </td>
      <td>COMMENT: <strong><%= comment.comment %></strong></td>
    </tr>
  </tbody>
</table>
<p class="uploaded">
  <%= l comment.created_at, format: :short %>
  <% if comment.user_id == current_user.id %>
  <%= link_to "DELETE", spot_comment_path(spot,comment.id), method: :delete , remote: true, class: "btn btn-sm btn-light" %>
  <% end %>
</p>
<% end %>