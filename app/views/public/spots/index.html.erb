<%= render 'public/shared/flash_messages' %>
<div class="container">
  <div class="row no-gutters">
    <div class="col-lg-2 col-sm-10 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">
      <%= render 'public/genres/search', genres: @genres %>
      <%= link_to "CREATE SPOT",new_spot_path, class:"btn btn-sm btn-primary" %>
    </div>


  <dic class="col-lg-5 card-list-container py-5">
  <% @spots.each do |spot| %>
  <div class="card w-100 mx-auto mt-4 shadow-lg">
    <div class="text-center">
    <%= link_to spot_path(spot.id) do %>
     <%= image_tag spot.image.variant( resize: "300x300^", gravity: "center" ) %>
    <% end %>
    </div>
    <div class="card-body">
      <div class="row">
        <div class="col-3">
          <%= image_tag spot.user.get_profile_image,size:"100,100", class:"mt-3 rounded-circle"; %>
        </div>
        <div class="col-9">
          <p class="card-title">
            <%= link_to(spot_path(spot.id), class:"text-dark") do %>
              <strong><i class="far fa-flag"></i><span> <%= spot.name %></span></strong>
            <% end %>
          </p>
          <p class="card-text">CAPTION：<%= spot.caption %></p>
          <span><i class="fas fa-user"></i> By <%= spot.user.name %> ｜ </span>
          <span>

          </span>
        </div>
      </div>
    </div>
  </div>
  <% end %>
  <%= paginate @spots %>
</div>