<%= render 'shared/flash_messages' %>
<div class="container">
  <div class="row">
    <div class="col-lg-3">
      <%= render 'public/genres/search', genres: @genres %>
      <%= link_to "CREATE SPOT",new_spot_path, class:"btn btn-sm btn-primary" %>
    </div>



<div class="container">
  <div class="row no-gutters">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">
      <h5 class="text-dark bg-light p-4 mb-0">SPOT DETAIL</h5>
      <div class="card-list-container py-5">

      <table class="table table-hover table-inverse">
        <tbody>
         <tr>
          <td><%= link_to user_path(@spot.user_id) do %>
              <%= image_tag @spot.user.get_profile_image(100,100) %>
              <% end %><br>
              <%= link_to @spot.user.name, user_path(@spot.user_id) %></td>
          <td><%= link_to @spot.title, spot_path %></td>
          <td><%= @spot.body %></td>
          <td class="favorite-btn"><%= render 'favorites/favorite-btn', spot: @spot %></td>
          <td>コメント件数：<%= @spot.spot_comments.count %></td>
          <td><div id="star-rate<%= @spot.id %>"></div>
            <script>
               $('#star-rate<%= @spot.id %>').raty({
                 size      : 36,
                 starOff   : '<%= asset_path('star-off.png') %>',
                 starOn    : '<%= asset_path('star-on.png') %>',
                 half      : false,
                 readOnly: true,
                 score: <%= @spot.star %>,
               });
            </script>
           </td>
          <% if @spot.user == current_user %>
          <td><%= link_to "Edit", edit_spot_path(@spot.id), class:"btn btn-sm btn-success" %></td>
          <td><%= link_to "Destroy",spot_path(@spot.id),class:"btn btn-sm btn-danger", method: :delete, "data-confirm" => "Are you sure？" %></td>
          <% end %>
         </tr>
        </tbody>
      </table>

      <div id="spot_comments">
        <%= render "spot_comments/comments", spot: @spot, spot_comments: @spot_comments %>
      </div>
      <div id="spot_comment_form">
        <%= render "spot_comments/comment_form", spot: @spot, spot_comment: @spot_comment %>
      </div>
    </div>

      </div>
    </div>
  </div>
</div>