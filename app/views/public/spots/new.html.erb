<div class="container">
  <div class="row no-gutters">
    <div class="col-md-5 col-lg-7 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">
      <%= render 'public/shared/spot_error_messages', spot: @spot %>
      <h5 class="text-dark bg-light p-4 mb-0">NEW SPOT</h5>
      <div class="form-body p-4">
        <!-- new post form -->
        <%= form_with model: @spot,method: :post do |f| %>
          <div class="input-group mb-3 mt-4">
            <div class="input-group-prepend">
              <span class="input-group-text" aria-hidden="true"><i class="fas fa-building"></i></span>
            </div>
            <%= f.text_field :name, class:"form-control", placeholder:"SPOT NAME" %>
          </div>
          <div class="input-group mb-3 mt-4">
            <%= f.text_area :caption, class:"form-control", rows:"3", placeholder:"CAPTION" %>
          </div>
          <div class="input-group mb-3 mt-4">
            <%= f.text_area :address, class:"form-control", placeholder:"ADDRESS" %>
          </div>
          <div class="input-group mb-3 mt-4">
            <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "SELECT GENRE" %>
          </div>
          <div class="input-group mb-3 mt-4">
            <%= f.file_field :image, accept: "image/*", class: "w-100" %>
          </div>
          <!-- Rate -->
          <div class="form-group row" id="star">
            <%= f.hidden_field :star, id: :review_star %>
          </div>
          <!-- 評価javascript -->
          <script>
            $('#star').raty({
              size     : 36,
              starOff:  '<%= asset_path('star-off.png') %>',
              starOn : '<%= asset_path('star-on.png') %>',
              scoreName: 'spot[star]',
              half: false,
            });
          </script>
            <hr>
            <%= f.submit 'SHARE', class:"btn btn-lg btn-block btn-info mt-4" %>
        <% end %>
      </div>
    </div>
  </div>
</div>