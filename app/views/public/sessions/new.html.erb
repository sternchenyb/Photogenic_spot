<div class="container">
  <div class="row no-gutters">
    <div class="col-md-5 col-lg-7 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">
      <%= render 'public/shared/error_messages', user: @user %>
      <h5 class="text-dark bg-light p-4 mb-0">SIGN IN</h5>
      <div class="form-body p-4">
       <!-- log in form -->
        <%= form_with model: @user, url: user_session_path do |f| %>
          <div class="input-group mb-3 mt-4">
            <%= f.label :email , class: "ml-xl-5"%><br />
                 <%= f.email_field :email, class: "ml-xl-5", autofocus: true, autocomplete: "email" %>
          </div>
          <div class="input-group mb-3 mt-4">
            <%= f.label :password, class: "ml-xl-5" %><br />
               <%= f.password_field :password, class: "ml-xl-5", autocomplete: "current-password" %>
          </div>
          <div class="input-group mb-3 mt-4">
            <% if devise_mapping.rememberable? %>
            <%= f.check_box :remember_me %>
             <%= f.label :remember_me , class: "ml-xl-1"%>
            <% end %>
          </div>
          <hr>
            <%= f.submit 'SIGN IN', class:"btn btn-lg btn-block btn-info mt-4" %>
        <% end %>
        <%= render "public/shared/links" %>
      </div>
    </div>
  </div>
</div>