<div class='container px-5 px-sm-0'>
  <div class='row'>
   <div class='mx-auto'>
    <h4 class="bg text-center"><%= @user.name %>さんの会員詳細</h4>
     <table>
      <tr>
       <td>USER ID</td>
       <td>　　　　　<%= @user.id %></td>
      </tr>
      <tr>
       <td>NAME</td>
       <td>　　　　　<%= @user.name %></td>
      </tr>
      <tr>
       <td>IMAGE</td>
       <td>          <%= image_tag @user.get_profile_image %></td>
      </tr>
      <tr>
       <td>EMAIL</td>
       <td>　　　　　<%= @user.email %></td>
      </tr>
      <tr>
       <td><%= link_to 'EDIT', users_information_edit_path, class: "btn btn-sm btn-success  rounded-pill" %></td>
      </tr>
     </table>
   </div>
  </div>
 </div>