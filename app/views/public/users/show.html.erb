<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h4 class="bg text-center"><%= @user.name %>'s MY PAGE</h4>
     <table>
      <tr>
       <td>USER ID</td>
       <td>　　　　　<%= @user.id %></td>
      </tr>
      <tr>
       <td>NAME</td>
       <td>　　　　　<%= @user.name %></td>
      </tr>
      <tr>
       <td>INTRODUCTION</td>
       <td>　　　　　<%= @user.introduction %></td>
      </tr>
      <tr>
       <td>IMAGE</td>
       <td>          <%= image_tag @user.get_profile_image %></td>
      </tr>
      <tr>
       <td>EMAIL</td>
       <td>　　　　　<%= @user.email %></td>
      </tr>
      <tr>
       <td><%= link_to 'EDIT', users_information_edit_path, class: "btn btn-sm btn-success  rounded-pill" %></td>
      </tr>
     </table>
    </div>

    <div class="col-md-8 offset-md-1">
     <% @spots.each do |spot| %>
      <table class="table table-hover table-inverse">
       <thead>
        <tr>
         <th><%=   %></th>
         <td><div id="star-rate<%= spot.id %>"></div>
            <script>
               $('#star-rate<%= spot.id %>').raty({
                 size      : 36,
                 starOff   : '<%= asset_path('star-off.png') %>',
                 starOn    : '<%= asset_path('star-on.png') %>',
                 half      : false,
                 readOnly: true,
                 score: <%= spot.star %>,
               });
            </script>
           </td>
        </tr>
       </thead>
        <tbody>
         <tr>
          <td><%= link_to users_my_page_path(spot.user_id) do %>
              <%= image_tag spot.user.get_profile_image,size:"100,100" %>
              <% end %><br>
              <%= link_to spot.user.name, users_my_page_path(spot.user_id) %></td>
          <td><%= link_to spot.name, spot_path(spot.id) %></td>
          <td><%= spot.caption %></td>
          <td class="favorite-btn"><%= render 'favorites/favorite-btn', spot: spot %></td>
          <td>
           <% if @comments.any? %>
              <%= link_to "VIEW ALL #{spot.spot_comments.count} COMMENTS", spot_path(spot.id), class:"text-dark" %>
            <% else %>
              <%= link_to "COMMENT" , spot_path(spot.id), class:"text-dark" %>
            <% end %>
          </td>
          <% if spot.user == current_user %>
          <td><%= link_to "Edit", edit_spot_path(spot.id), class:"btn btn-sm btn-success" %></td>
          <td><%= link_to "Destroy",spot_path(spot.id),class:"btn btn-sm btn-danger", method: :delete, "data-confirm" => "Are you sure？" %></td>
          <% end %>
         </tr>
        </tbody>
      </table>
      <% end %>
      <%= paginate @spots %>
    </div>
  </div>
</div>