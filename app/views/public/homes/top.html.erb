<div class="container">
  <div class="row no-gutters">
    <div class="col-mx text-center shadow-lg py-3">
      <h3>NOW, YOU CAN FIND PHOTOGENIC SPOTS EASIER.</h3>
      <div class="slider">
        <% @randoms.each do |random| %>
          <%= link_to image_tag(random.image.variant(resize:"600x500^", gravity:"center")), spots_path(random.id), method: :get %>
        <% end %>
      </div>
    </div>
  </div>
</div>




<script>
  $('.slider').slick({
      centerMode: true, //スライド画面に次のスライドが表示される
      centerPadding: '10%', //次のスライドの幅
      dots: true, //スライドの下にドットのナビゲーションを表示
      autoplay: true, //自動再生オン
      autoplaySpeed: 1000, //再生スピード
      infinite: true //スライドが終了したら最初に戻る
  });
</script>